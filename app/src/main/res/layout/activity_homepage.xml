<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/Inputext"
            android:text="Input Text" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/Linearlayout"
            android:text="Linear Layout" />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/Tablelayout"
            android:text="Table Layout" />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/Constraintlayout"
            android:text="Constraint Layout" />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/RelativeLayout"
            android:text="Relative Layout" />
        <Button
            android:id="@+id/Absolutelayout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Absolute Layout" />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="ListView Grid"
            android:id="@+id/Listviewgrid"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Custom ListView"
            android:id="@+id/Customlistview"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="GridView"
            android:id="@+id/Gridview"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Custom Gridview"
            android:id="@+id/Customgridview"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Option"
            android:id="@+id/option"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="FormData"
            android:id="@+id/formdata"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Calculator"
            android:id="@+id/calculator"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
